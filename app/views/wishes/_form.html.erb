<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with model: wish do |f| %>
        <div class="form-group">
          <%= f.label :writer, class: 'form-label' %>
          <%= f.text_field :writer, class: 'form-control', placeholder: '名前を入れてね', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :context, class: 'form-label' %>
          <%= f.text_field :context, class: 'form-control', placeholder: '願い事を入れてね', required: true %>
        </div>

        <div class="float-end mt-5">
          <%= f.submit '願う', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
